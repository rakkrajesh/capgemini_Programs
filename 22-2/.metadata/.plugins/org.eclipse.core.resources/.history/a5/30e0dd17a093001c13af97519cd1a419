package programs;

public class StarFigureCode {
    public static void main(String[] args) {
        int size = 6;
        int n = 0;
        for (int i = 0 ; i <= size ;i++) {
            for (int k = 0 ; k < size*8/2 - n ; k++) {
                System.out.print('/');
            }
            for (int j = 0 ; j < i*8 ; j++) {
                System.out.print('*');
            }

            for (int k = 0 ; k < size*8/2 - n ; k++) {
                System.out.print("\\");
            }
            n+=4;
            System.out.println();
        }
    }
}
